<header class="navbar-fixed-top">
  <div class="pan-container">

    <span class="pull-left btn nav-but">
      <%= Time.now.strftime '%d.%m.%Y' %>
    </span>

    <%= link_to root_path, class: 'btn nav-but' do %>
        <i class="glyphicon glyphicon-home"></i> Главная
    <% end %>

    <div class="btn-group">
      <a href="#" class="dropdown-toggle btn nav-but" data-toggle="dropdown"><i class="glyphicon glyphicon-info-sign"></i> Инфо <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Помощь', help_path %></li>
        <li><%= link_to 'О проекте', about_path %></li>
        <li><%= link_to 'Обратная связь', contact_path %></li>
      </ul>
    </div>

    <div class="btn-group">
      <a href="#" class="dropdown-toggle btn nav-but" data-toggle="dropdown"><i class="glyphicon glyphicon-book"></i> Статьи <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Все статьи', articles_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Написать статью', new_article_path, 'data-no-turbolink' => true %></li>
      </ul>
    </div>

    <% if logged_in? %>

      <%= link_to users_path, class: 'btn nav-but' do %>
        <i class="glyphicon glyphicon-user"></i> Пользователи
      <% end %>

      <div class="btn-group pull-right">
        <a href="#" class="dropdown-toggle btn nav-but" data-toggle="dropdown"><i class="glyphicon glyphicon-star"></i> <%= current_user.name %> <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Мой профиль', current_user %></li>
          <li><%= link_to 'Настройки профиля', edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to 'Выход из профиля', logout_path, method: 'delete' %></li>
        </ul>
      </div>

    <% else %>

      <%= link_to login_path, class: 'btn nav-but' do %>
        <i class="glyphicon glyphicon-user"></i> Вход
      <% end %>
      <%= link_to signup_path, class: 'btn nav-but' do %>
        <i class="glyphicon glyphicon-star"></i> Регистрация
      <% end %>

    <% end %>

  </div>
</header>