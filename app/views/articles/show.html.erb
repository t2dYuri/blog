<div class="row">
  <div class="col-md-8">
    <small class="float-left">последнее обновление: <strong><%= @article.updated_at.strftime '%d-%m-%Y в %X' %></strong></small>
    <h2 class="text-center"><%= @article.title %></h2>
    <h5 class="t-block"><%= @article.description.html_safe %></h5>
    <div id="spot" class="t-block">
      <%= @article.text.html_safe %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-top">
      <div class="panel-heading">
        <h3 class="panel-title">Комментарии</h3>
      </div>
      <div class="panel-body">
        <ul class="list-unstyled">
        <%= render html: '<center>Пока что никто не комментировал эту статью</center>'
                       .html_safe unless @article.comments.count > 0 %>
        <%= render @article.comments.order('updated_at DESC') %>
        </ul>
      </div>
    </div>
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Добавить комментарий</h3>
      </div>
      <div class="panel-body">
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>

<nav class="navbar-fixed-bottom" role="navigation">
  <div class="text-center">
    <%= link_to 'предыдущая статья', @article.previous_article, class: 'pull-left' if @article.previous_article %> |
    <%= link_to 'редактировать статью', edit_article_path(@article), 'data-no-turbolink' => true %> |
    <%= link_to 'удалить эту статью', article_path(@article), method: :delete, data: {confirm: 'Серьезно?'} %> |
    <%= link_to 'обратно к списку', articles_path %> |
    <%= link_to 'следующая статья', @article.next_article, class: 'pull-right' if @article.next_article %>
  </div>
</nav>
