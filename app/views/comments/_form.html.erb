<%= form_for ([@article, @article.comments.build]) do |f| %>
  <% if logged_in? %>

    <%= f.text_field :commenter, class: 'form-control', :value => "#{current_user.name}", :readonly => true %>
    <%= f.label 'Комментарий' %>
    <%= f.text_area :body, class: 'form-control', rows: 6 %>
    <%= f.submit 'сохранить комментарий', class: 'btn btn-main' %>

  <% else %>

    <%= f.label 'Ваше имя' %>
    <%= f.text_field :commenter, class: 'form-control', :readonly => true %>
    <%= f.label 'Комментарий' %>
    <%= f.text_area :body, class: 'form-control', rows: 6, :readonly => true, 'placeholder' => 'Комментирование статей доступно только зарегистрированным пользователям. Пожалуйста, выберите нужное действие ниже...' %>
    <%= link_to 'Вход', login_path, class: 'btn btn-main' %>
    <%= link_to 'Регистрация', signup_path, class: 'btn btn-main' %>

  <% end %>
<% end %>
