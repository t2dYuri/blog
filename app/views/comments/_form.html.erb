<%= form_for ([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label 'Ваше Имя' %><br>
      <%= f.text_field :commenter, class: 'form-control' %>
    </p>
    <p>
      <%= f.label 'Комментарий' %><br>
      <%= f.text_area :body, class: 'form-control', rows: 6 %>
    </p>
    <p>
      <%= f.submit 'сохранить комментарий', class: 'btn btn-main' %>
    </p>
<% end %>
